run:
	PRODUCTIVITY_HOST=127.0.0.1 \
	PRODUCTIVITY_PORT=5555 \
	POSTGRES_HOST=localhost \
	POSTGRES_USER=dshur \
	POSTGRES_PASSWORD=1234 \
	POSTGRES_DB=productivity \
	REDIS_HOST=127.0.0.1 \
	REDIS_PORT=6379 \
	cargo run

test:
	PRODUCTIVITY_HOST=127.0.0.1 \
	PRODUCTIVITY_PORT=5555 \
	POSTGRES_HOST=localhost \
	POSTGRES_USER=dshur \
	POSTGRES_PASSWORD=1234 \
	POSTGRES_DB=productivity \
	REDIS_HOST=127.0.0.1 \
	REDIS_PORT=6379 \
	cargo test -- --test-threads=1
